<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
    .panel-body {
        font-size: 20px; /* Adjust the font size as needed */
    }
    .list-unstyled li {
        font-size: 20px; /* Adjust the font size as needed */
    }
    .form-group input[type="email"] {
        font-size: 20px; /* Adjust the font size as needed */
        height: 50px; /* Increase the input field height */
    }
    .form-group .btn {
        font-size: 24px; /* Adjust the font size as needed */
        height: 50px; /* Increase the button height */
    }
</style>
</head>

<body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <div class="form-gap"></div>
    <div class="container col-12">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h1>Forgot your password?</h1>
                            <p>Change your password in three easy steps. This will help you to secure your password!</p>
                            <ol class="list-unstyled" style="text-align: left;" >
                                <li><span class="text-primary text-medium">1. </span>Enter your email address below.
                                </li>
                                <li><span class="text-primary text-medium">2. </span>Our system will send you a
                                    temporary link</li>
                                <li><span class="text-primary text-medium">3. </span>Use the link to reset your password
                                </li>
                            </ol>
                            <div class="panel-body">

                                <form id="register-form" action="/forget" role="form" autocomplete="off" class="form"
                                    method="post">

                                    <div class="form-group">
                                        <div class="input-group">
                                            <i class="bi bi-envelope-fill mt-3 mx-2"></i>
                                            <input id="email" name="email" placeholder="email address"
                                                class="form-control" type="email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block"
                                            value="Reset Password" type="submit">
                                    </div>

                                    <input type="hidden" class="hide" name="token" id="token" value="">
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


